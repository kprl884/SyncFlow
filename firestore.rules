rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Workspace members can read/write workspace data
    match /workspaces/{workspaceId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.members;
      
      // Allow workspace creation
      allow create: if request.auth != null;
    }
    
    // Workspace tasks
    match /workspaces/{workspaceId}/tasks/{taskId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.members;
    }
    
    // Daily logs
    match /workspaces/{workspaceId}/dailyLogs/{logId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.members;
    }
  }
}
